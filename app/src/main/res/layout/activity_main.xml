<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".controllers.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="150dp" />

            <RelativeLayout
                android:orientation="horizontal"
                android:padding="15dp"
                android:id="@+id/holderSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="30sp"
                    android:fontFamily="@font/roboto_slab_bold"
                    android:textStyle="bold"
                    style="@style/roboto_slab_bold"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:id="@+id/logoutBtnClicked"
                    android:background="@drawable/custom_edit_text_back_rounded"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_settings_power_white_24dp"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_below="@id/holderSettings"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/welcome"
                            android:layout_width="wrap_content"
                            android:text="Welcome"
                            android:textColor="@color/black"
                            style="@style/roboto_slab_bold"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/username"
                            android:layout_toEndOf="@id/welcome"
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            tools:text="Roufy235"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:background="@color/silver"
                        android:layout_margin="10dp"
                        android:layout_height="0.5dp"/>

                    <TextView
                        android:id="@+id/full_name"
                        android:layout_width="wrap_content"
                        tools:text="Full name"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        tools:text="email"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardElevation="15dp"
                android:layout_weight="1"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"
                android:layout_height="200dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/ripple_card_clicked"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/custom_edit_text_back_rounded"
                        android:src="@drawable/ic_account_circle_app_color_24dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Edit Account"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardElevation="15dp"
                android:layout_weight="1"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"
                android:layout_height="200dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/ripple_card_clicked"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/custom_edit_text_back_rounded"
                        android:src="@drawable/ic_settings_app_color_24dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Settings"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardElevation="15dp"
                android:layout_weight="1"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"
                android:layout_height="200dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/ripple_card_clicked"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/custom_edit_text_back_rounded"
                        android:src="@drawable/ic_info_outline_app_color_24dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="About Us"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardElevation="15dp"
                android:layout_weight="1"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"
                android:layout_height="200dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/ripple_card_clicked"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/custom_edit_text_back_rounded"
                        android:src="@drawable/ic_contact_phone_app_color_24dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Contact Us"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>



</ScrollView>